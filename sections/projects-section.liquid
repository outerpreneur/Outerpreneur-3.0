<div id="projects" class="bg-white py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
        {{ section.settings.projects_heading }}
      </h2>
      <p class="mt-2 text-lg leading-8 text-gray-600">{{ section.settings.projects_subheading }}</p>
    </div>
    <div class=" mx-auto mt-16 grid max-w-2xl auto-rows-fr grid-cols-1 gap-8 sm:mt-20 lg:mx-0 lg:max-w-none lg:grid-cols-3">
      {% for block in section.blocks %}
        <article class="relative isolate flex flex-col justify-end overflow-hidden rounded-2xl shadow-2xl  px-8 pb-8 pt-80 sm:pt-48 lg:pt-80 bg-gradient-to-r from-[#7ab7c6] to-[#62b6a0]">
          <img
            src="{{ block.settings.article_image | image_url }}"
            width=""
            height=""
            loading="lazy"
            alt="{{ block.settings.article_title }}"
            class="absolute inset-0 -z-10 h-full w-full object-cover"
          >

          <h3 class="mt-3 text-lg font-semibold leading-6 text-white">
            <a href="#">
              <span class="absolute inset-0"></span>
              {{ block.settings.article_title }}
            </a>
          </h3>
        </article>
      {% endfor %}

      <!-- More posts... -->
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Projects",
  "settings": [
    {
      "type": "text",
      "id": "projects_heading",
      "label": "Projects",
      "default": "Recent Work"
    },
    {
      "type": "text",
      "id": "projects_subheading",
      "label": "Projects Subheading",
      "default": "Learn how to grow your business with our expert advice."
    }
  ],
  "max_blocks": 6,
  "blocks": [
    {
      "type": "article",
      "name": "Article",

      "settings": [
        {
          "type": "text",
          "id": "article_title",
          "label": "Article title",
          "default": "Article Title"
        },
        {
          "type": "image_picker",
          "id": "article_image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Projects",
      "category": "Blog",
      "settings": {}
    }
  ]
}
{% endschema %}
