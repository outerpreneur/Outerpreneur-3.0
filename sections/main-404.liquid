<div class="grid min-h-full grid-cols-1 grid-rows-[1fr,auto,1fr] bg-white lg:grid-cols-[max(50%,36rem),1fr]">
  <main class="mx-auto w-full max-w-7xl px-6 py-24 sm:py-32 lg:col-span-2 lg:col-start-1 lg:row-start-2 lg:px-8">
    <div class="max-w-lg">
      <p class="text-base font-semibold leading-8 text-indigo-600">
        {{ section.settings.subtitle }}
      </p>
      <h1 class="mt-4 text-3xl font-bold tracking-tight text-gray-900 sm:text-5xl">{{ section.settings.title }}</h1>
      <p class="mt-6 text-base leading-7 text-gray-600">{{ section.settings.description }}</p>
      <div class="mt-10">
        <a href="#" class="text-sm font-semibold leading-7 text-indigo-600"
          ><span aria-hidden="true">&larr;</span> {{ section.settings.link -}}
        </a>
      </div>
    </div>
  </main>
  <footer class="self-end lg:col-span-2 lg:col-start-1 lg:row-start-3">
    <div class="border-t border-gray-100 bg-gray-50 py-10">
      <nav class="mx-auto flex w-full max-w-7xl items-center gap-x-4 px-6 text-sm leading-7 text-gray-600 lg:px-8">
        <a href="{{ section.settings.link_2_url }}">{{ section.settings.link_2 }}</a>
        <svg viewBox="0 0 2 2" aria-hidden="true" class="h-0.5 w-0.5 fill-gray-300">
          <circle cx="1" cy="1" r="1" />
        </svg>
        <a href="#">{{ section.settings.link_3 }}</a>
      </nav>
    </div>
  </footer>
  <div class="hidden lg:relative lg:col-start-2 lg:row-start-1 lg:row-end-4 lg:block">
    <img
      src="{{ section.settings.hero_image | image_url }}"
      alt=""
      class="absolute inset-0 h-full w-full object-cover"
      width=""
      height=""
      loading="eager"
    >
  </div>
</div>

{% schema %}
{
  "name": "404 section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "404"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Page not found"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "Sorry, we couldn’t find the page you’re looking for."
    },
    {
      "type": "text",
      "id": "link",
      "label": "Link",
      "default": "Back to home"
    },
    {
      "type": "text",
      "id": "link_2",
      "label": "Link 2",
      "default": "Contact support"
    },
    {
      "type": "text",
      "id": "link_2_url",
      "label": "Link 2 URL",
      "default": "/contact"
    },
    {
      "type": "text",
      "id": "link_3",
      "label": "Link 3",
      "default": "Status"
    },
    {
      "type": "text",
      "id": "link_3_url",
      "label": "Link 3 URL"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero image"
    }
  ],
  "presets": [
    {
      "name": "404 section",
      "category": "Page sections",
      "settings": {}
    }
  ]
}
{% endschema %}
