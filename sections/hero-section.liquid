<script>
  // rotating text

  document.addEventListener('DOMContentLoaded', function () {
    var rotatingText = document.getElementById('rotating-text');
    var sentences = [
      ' {{ section.settings.rotating_text }}',
      ' {{ section.settings.rotating_text2 }}',
      ' {{ section.settings.rotating_text3 }}',
    ];
    var index = 0;

    setInterval(function () {
      rotatingText.textContent = sentences[index];
      index = (index + 1) % sentences.length;
    }, {{ section.settings.rotating_text_speed | default: 2000}});
  });
</script>
