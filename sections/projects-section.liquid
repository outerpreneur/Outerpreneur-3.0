<div id="projects" class="py-24 sm:py-32 relative">
  <div
    class="absolute left-1/2 right-0 top-0 -z-10 -ml-24 transform-gpu overflow-hidden blur-3xl lg:ml-24 xl:ml-48"
    aria-hidden="true"
  >
    <div
      class="aspect-[801/1036] w-[50.0625rem] bg-gradient-to-tr from-[#ff80b5] to-[#9089fc] opacity-30"
      style="clip-path: polygon(63.1% 29.5%, 100% 17.1%, 76.6% 3%, 48.4% 0%, 44.6% 4.7%, 54.5% 25.3%, 59.8% 49%, 55.2% 57.8%, 44.4% 57.2%, 27.8% 47.9%, 35.1% 81.5%, 0% 97.7%, 39.2% 100%, 35.2% 81.4%, 97.2% 52.8%, 63.1% 29.5%)"
    ></div>
  </div>
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl">
        {{ section.settings.projects_heading }}
      </h2>
      <p class="mt-2 text-lg leading-8 text-gray-600 dark:text-gray-300">{{ section.settings.projects_subheading }}</p>
    </div>
    <div class="mx-auto mt-16 grid max-w-2xl auto-rows-fr grid-cols-1 gap-8 sm:mt-20 lg:mx-0 lg:max-w-none lg:grid-cols-3">
      {% for block in section.blocks %}
        <a href="{{ section.settings.project_link }}" target="_blank">
          <article class="relative isolate flex flex-col justify-end overflow-hidden rounded-2xl shadow-2xl  px-8 pb-8 pt-80 sm:pt-48 lg:pt-80 bg-gradient-to-r from-cyan-500 to-blue-500 ">
            <img
              src="{{ block.settings.article_image | image_url }}"
              width=""
              height=""
              loading="lazy"
              alt="{{ block.settings.article_title }}"
              class="absolute inset-0 -z-10 h-full w-full object-cover"
            >

            <h3 class="mt-3 text-lg font-semibold leading-6 text-white">
              <a href="{{ section.settings.project_link }}">
                <span class="absolute inset-0"></span>
                {{ block.settings.article_title }}
              </a>
            </h3>
          </article>
        </a>
      {% endfor %}

      <!-- More posts... -->
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Projects",
  "settings": [
    {
      "type": "text",
      "id": "projects_heading",
      "label": "Projects",
      "default": "Recent Work"
    },
    {
      "type": "text",
      "id": "projects_subheading",
      "label": "Projects Subheading",
      "default": "Learn how to grow your business with our expert advice."
    }
  ],
  "max_blocks": 6,
  "blocks": [
    {
      "type": "article",
      "name": "Article",

      "settings": [
        {
          "type": "text",
          "id": "article_title",
          "label": "Article title",
          "default": "Article Title"
        },
        {
          "type": "image_picker",
          "id": "article_image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "project_link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Projects",
      "category": "Blog",
      "settings": {}
    }
  ]
}
{% endschema %}
