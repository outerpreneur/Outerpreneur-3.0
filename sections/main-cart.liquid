<div
  class="py-24 sm:py-32"
  style="background-image: url({{ section.settings.background_image | image_url }});  background-size: cover; background-position: {{ section.settings.position_image }}; background-repeat: no-repeat; "
>
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:mx-0">
      <p class="text-base font-semibold leading-7 text-white">
        <a href="#" class="hover:underline">
          {{ section.settings.subheading }}
        </a>
      </p>
      <h2 class="mt-2 text-4xl font-bold tracking-tight text-white sm:text-6xl">
        {{ section.settings.heading }}
      </h2>
      <p class="mt-6 text-lg leading-8 text-white">
        {{ section.settings.description }}
      </p>
    </div>
  </div>
</div>

{% form 'cart', cart %}
  <div class="cart" data-money-format="{{ shop.money_format }}">
    <div class="mx-auto max-w-2xl px-4 pb-24 pt-16 sm:px-6 lg:max-w-7xl lg:px-8">
      <h1 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl">Shopping Cart</h1>
      <div class="mt-12 lg:grid lg:grid-cols-12 lg:items-start lg:gap-x-12 xl:gap-x-16">
        {% if cart.empty? %}
          <p>Your cart is empty.</p>
        {% else %}
          <section aria-labelledby="cart-heading" class="lg:col-span-7">
            <h2 id="cart-heading" class="sr-only">Items in your shopping cart</h2>
            <ul role="list" class="divide-y divide-gray-200 border-b border-t border-gray-200">
              {% for item in cart.items %}
                <li class="flex py-6 sm:py-10 cart-item" data-key="{{ item.key }}">
                  <div class="flex-shrink-0">
                    <a href="{{ item.url }}">
                      <img
                        src="{{ item.image | image_url }}"
                        alt=""
                        width="500"
                        height="500"
                        loading="lazy"
                        class="h-24 w-24 rounded-md object-cover object-center sm:h-48 sm:w-48"
                      >
                    </a>
                  </div>

                  <div class="ml-4 flex flex-1 flex-col justify-between sm:ml-6">
                    <div class="relative pr-9 sm:grid sm:grid-cols-2 sm:gap-x-6 sm:pr-0">
                      <div>
                        <div class="flex justify-between">
                          <h3 class="text-sm">
                            <a href="#" class="font-medium text-gray-700 dark:text-gray-300 hover:text-gray-800">
                              {{- item.product.title -}}
                            </a>
                          </h3>
                        </div>
                        {% if item.variant.title != 'Default Title' %}
                          <h4 class="text-sm font-medium text-gray-500 dark:text-gray-300 hover:text-gray-800">
                            {{- item.variant.title -}}
                          </h4>
                        {% endif %}

                        <p class="mt-1 text-sm font-medium text-gray-900 dark:text-gray-300">
                          {{ item.price | money }}
                        </p>
                      </div>

                      <div class="mt-4 sm:mt-0 sm:pr-9">
                        <label for="quantity-{{ forloop.index }}" class="sr-only">Quantity, {{ item.title }}</label>
                        <div class="flex items-center h-10">
                          <div class="mt-4 sm:mt-0 sm:pr-9 flex gap-6">
                            <label for="quantity-{{ forloop.index }}" class="sr-only">Quantity, {{ item.title }}</label>
                            <div class="flex items-center">
                              <button
                                id="minus-{{ forloop.index }}"
                                class="border border-gray-300 rounded-md px-2 py-1.5 text-base font-medium leading-5 text-gray-700 dark:text-gray-300 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-1 focus:ring-indigo-500 sm:text-sm"
                              >
                                -
                              </button>
                              <input
                                type="text"
                                id="quantity-{{ forloop.index }}"
                                name="quantity-{{ forloop.index }}"
                                value="{{ item.quantity }}"
                                class="border w-10 border-gray-300 rounded-md px-2 py-1.5 text-center text-base font-medium leading-5 text-gray-700 dark:text-gray-300 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-1 focus:ring-indigo-500 sm:text-sm mx-2"
                              >
                              <button
                                id="plus-{{ forloop.index }}"
                                class="border border-gray-300 rounded-md px-2 py-1.5 text-base font-medium leading-5 text-gray-700 dark:text-gray-300 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-1 focus:ring-indigo-500 sm:text-sm"
                              >
                                +
                              </button>
                            </div>
                            <div class="flex items-center justify-between flex-col">
                              {% comment %} <p class="text-sm font-medium leading-5 text-gray-700">Subtotal</p> {% endcomment %}
                              <p
                                id="subtotal-item"
                                class="text-sm font-medium leading-5 text-gray-500 dark:text-gray-300"
                              >
                                {{- item.final_line_price | money -}}
                              </p>
                            </div>

                            <div class="absolute right-0 top-0">
                              <a href="{{ item.url_to_remove }}" class="remove-item" id="remove-item">
                                <button
                                  type="button"
                                  class="-m-2 inline-flex p-2 text-gray-400 dark:text-gray-200 hover:text-gray-500"
                                >
                                  <span class="sr-only">Remove</span>
                                  <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                    <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" />
                                  </svg>
                                </button>
                              </a>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                    {% if item.variant.inventory_quantity > 0 %}
                      <p class="mt-4 flex space-x-2 text-sm text-gray-700">
                        <svg
                          class="h-5 w-5 flex-shrink-0 text-green-500"
                          viewBox="0 0 20 20"
                          fill="currentColor"
                          aria-hidden="true"
                        >
                          <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
                        </svg>

                        <span>In stock</span>
                      </p>
                    {% elsif item.variant.inventory_management == null %}
                      <span></span>
                    {% else %}
                      <p class="mt-4 flex space-x-2 text-sm text-gray-700 dark:text-gray-300">
                        <svg
                          class="h-5 w-5 flex-shrink-0 text-red-500"
                          viewBox="0 0 20 20"
                          fill="currentColor"
                          aria-hidden="true"
                        >
                          <path
                            fill-rule="evenodd"
                            d="M10 18a8 8 0 100-16 8 8 0 000 16zM9 7a1 1 0 112 0v4a1 1 0 11-2 0V7zm2 8a1 1 0 11-2 0 1 1 0 012 0z"
                            clip-rule="evenodd"
                          />
                        </svg>

                        <span>Out of stock</span>
                    {% endif %}
                  </div>
                </li>
              {% endfor %}
            </ul>
          </section>

          <!-- Order summary -->
          <section
            aria-labelledby="summary-heading"
            class="mt-16 rounded-lg bg-gray-50 dark:bg-black px-4 py-6 sm:p-6 lg:col-span-5 lg:mt-0 lg:p-8"
          >
            <h2 id="summary-heading" class="text-lg font-medium text-gray-900 dark:text-white">Order summary</h2>

            <dl class="mt-6 space-y-4">
              <div class="flex items-center justify-between">
                <dt class="text-sm text-gray-600 dark:text-gray-300">Subtotal</dt>
                <dd class="text-sm font-medium text-gray-900 dark:text-white" id="subtotal">
                  {{ cart.items_subtotal_price | money }}
                </dd>
              </div>
              <div class="flex items-center justify-between border-t border-gray-200 pt-4">
                <dt class="flex items-center text-sm text-gray-600 dark:text-gray-300">
                  <span>Shipping</span>
                  <a href="#" class="ml-2 flex-shrink-0 text-gray-400 hover:text-gray-500">
                    <span class="sr-only">Learn more about how shipping is calculated</span>
                    <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                      <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zM8.94 6.94a.75.75 0 11-1.061-1.061 3 3 0 112.871 5.026v.345a.75.75 0 01-1.5 0v-.5c0-.72.57-1.172 1.081-1.287A1.5 1.5 0 108.94 6.94zM10 15a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                    </svg>
                  </a>
                </dt>
                <dd class="text-sm font-medium text-gray-900 dark:text-white">At checkout</dd>
              </div>
              <div class="flex items-center justify-between border-t border-gray-200 pt-4">
                <dt class="flex text-sm text-gray-600 dark:text-gray-300">
                  <span>Discounts</span>
                  <a href="#" class="ml-2 flex-shrink-0 text-gray-400 hover:text-gray-500">
                    <span class="sr-only">Learn more about how tax is calculated</span>
                    <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                      <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zM8.94 6.94a.75.75 0 11-1.061-1.061 3 3 0 112.871 5.026v.345a.75.75 0 01-1.5 0v-.5c0-.72.57-1.172 1.081-1.287A1.5 1.5 0 108.94 6.94zM10 15a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                    </svg>
                  </a>
                </dt>
                <dd class="text-sm font-medium text-gray-900 dark:text-white" id="total-discount">
                  {{ cart.total_discount | money }}
                </dd>
              </div>
              <div class="flex items-center justify-between border-t border-gray-200 pt-4">
                <dt class="text-base font-medium text-gray-900 dark:text-white">
                  Order total<span class="text-gray-500 dark:text-gray-300 text-sm ml-2">(exc shipping)</span>
                </dt>

                <dd class="text-base font-medium text-gray-900 dark:text-white" id="total-price">
                  {{ cart.total_price | money }}
                </dd>
              </div>
            </dl>

            <div class="mt-6">
              <button
                name="checkout"
                type="submit"
                class="w-full rounded-md border border-transparent bg-gradient-to-r hover:bg-gradient-to-bl from-cyan-500 to-blue-500 px-4 py-3 text-base font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:ring-offset-gray-50"
              >
                Checkout
              </button>
            </div>
          </section>
        {% endif %}
      </div>
    </div>
  </div>
{% endform %}

{% schema %}
{
  "name": "Cart page",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "select",
      "id": "position_image",
      "label": "Position image",
      "default": "center",
      "options": [
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        },
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ]
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Cart page"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "This is the cart page"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "This is the cart page"
    }
  ]
}
{% endschema %}
