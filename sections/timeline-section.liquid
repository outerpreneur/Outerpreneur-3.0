<div class="bg-white py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto grid max-w-2xl grid-cols-1 gap-8 overflow-hidden lg:mx-0 lg:max-w-none lg:grid-cols-4">
      {% for block in section.blocks %}
        <div>
          <time datetime="2021-12" class="flex items-center text-sm font-semibold leading-6 text-indigo-600">
            <svg viewBox="0 0 4 4" class="mr-4 h-1 w-1 flex-none" aria-hidden="true">
              <circle cx="2" cy="2" r="2" fill="currentColor" />
            </svg>
            {{ block.settings.timeline_step }}
            <div
              class="absolute -ml-2 h-px w-screen -translate-x-full bg-gray-900/10 sm:-ml-4 lg:static lg:-mr-6 lg:ml-8 lg:w-auto lg:flex-auto lg:translate-x-0"
              aria-hidden="true"
            ></div>
          </time>
          <p class="mt-6 text-lg font-semibold leading-8 tracking-tight text-gray-900">
            {{ block.settings.timeline_title }}
          </p>
          <p class="mt-1 text-base leading-7 text-gray-600">
            {{ block.settings.timeline_description }}
          </p>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Timeline",
  "settings": [],
  "max_blocks": 4,
  "blocks": [
    {
      "type": "timeline",
      "name": "Timeline",
      "settings": [
        {
          "type": "textarea",
          "id": "timeline_step",
          "label": "Date",
          "default": "Step 1"
        },
        {
          "type": "textarea",
          "id": "timeline_title",
          "label": "Step title",
          "default": "Discovery"
        },
        {
          "type": "textarea",
          "id": "timeline_description",
          "label": "Description",
          "default": "Nihil aut nam. Dignissimos a pariatur et quos omnis. Aspernatur asperiores et dolorem dolorem optio voluptate repudiandae."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Timeline",
      "category": "Content",
      "settings": {}
    }
  ]
}
{% endschema %}
